<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back"
    tools:context=".CreateActivity">

    <EditText
        android:id="@+id/textView14"
        android:layout_width="76dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/mission_name"
        app:layout_constraintTop_toBottomOf="@+id/mission_name" />

    <EditText
        android:id="@+id/textView15"
        android:layout_width="114dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/mission_name" />

    <EditText
        android:id="@+id/mission_name"
        android:layout_width="295dp"
        android:layout_height="54dp"
        android:layout_marginTop="180dp"
        android:layout_weight="2"
        android:background="@null"
        android:gravity="center_horizontal"
        android:hint="在此输入任务名"
        android:padding="10dp"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:textColor="#ff000000"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">/</EditText>

    <TextView
        android:id="@+id/name"
        android:layout_width="76dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:gravity="center"
        android:text="委托人:"
        android:textColor="#111111"
        app:layout_constraintStart_toStartOf="@+id/mission_name"
        app:layout_constraintTop_toBottomOf="@+id/mission_name" />

    <TextView
        android:id="@+id/money"
        android:layout_width="76dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:gravity="center"
        android:text="报酬:"
        android:textColor="#111111"
        app:layout_constraintEnd_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/mission_name" />

    <EditText
        android:id="@+id/xiangqing"
        android:layout_width="300dp"
        android:layout_height="223dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:gravity="left"
        android:hint="在此输入任务详情"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/mission_name"
        app:layout_constraintStart_toStartOf="@+id/mission_name"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <Button
        android:id="@+id/button"
        android:layout_width="264dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:text="发布"
        app:layout_constraintEnd_toEndOf="@+id/xiangqing"
        app:layout_constraintStart_toStartOf="@+id/xiangqing"
        app:layout_constraintTop_toBottomOf="@+id/jiezhitime" />

    <TextView
        android:id="@+id/jiezhitime"
        android:layout_width="65dp"
        android:layout_height="22dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="截止时间:"
        android:textColor="#111111"
        app:layout_constraintStart_toStartOf="@+id/xiangqing"
        app:layout_constraintTop_toBottomOf="@+id/xiangqing" />

    <EditText
        android:id="@+id/textView13"
        android:layout_width="143dp"
        android:layout_height="21dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:textColor="#000000"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/xiangqing"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/jiezhitime"
        app:layout_constraintTop_toBottomOf="@+id/xiangqing" />

    <Button
        android:id="@+id/back"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:background="@mipmap/arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>